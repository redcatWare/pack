#!/bin/bash

# Download location (replace with your actual URL)
download_url="https://raw.githubusercontent.com/redcatWare/pack/main/pack"

# Download directory (replace with a safe directory)
download_dir="/tmp"

# Downloaded file name (replace with actual script name)
download_file="pack"

# Installation directory
install_dir="/usr/bin"

# Check download directory permissions (avoid root)
if [ ! -w "$download_dir" ]; then
    echo "Error: Cannot write to download directory $download_dir. Please check permissions."
    exit 1
fi

# Download the script
wget -O "$download_dir/$download_file" "$download_url"

# Check download successful
if [ ! -f "$download_dir/$download_file" ]; then
    echo "Error: Download failed. Please check the download URL."
    exit 1
fi

# Move to install directory (avoid root)
mv "$download_dir/$download_file" "$install_dir"

# Make the script executable (caution: see note below)
chmod +x "$install_dir/$download_file"

echo "Pack installation complete."
